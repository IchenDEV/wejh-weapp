.red-dot {
  background-color: rgba(255, 2, 2, 0.7);
}

.red-dot.disabled {
  background-color: #868e96;
}

.red-dot.filled {
  height: 36rpx;
  border-radius: calc(36rpx / 2);
  padding: 0 12rpx;
  font-size: 24rpx;
  line-height: 36rpx;
  vertical-align: middle;
  text-align: center;
  color: white;
}

.red-dot.empty {
  text-align: center;
  height: 18rpx;
  width: 18rpx;
  border-radius: 50%;
}

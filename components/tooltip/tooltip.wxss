.m-tooltip {
  position: fixed;
  bottom: 50rpx;
  left: 0;
  width: 100%;
  text-align: center;
  opacity: 0;
  transform: translate3d(0, 80rpx, 0);
  transition: all 0.5s cubic-bezier(0.19, 1, 0.22, 1);
}

.m-tooltip.active {
  opacity: 1;
  transform: translate3d(0, 0, 0);
}

.m-tooltip .content {
  font-size: 24rpx;
  line-height: 100%;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  background: rgba(66, 66, 66, 0.6);
  color: #fff;
}

.m-help-box {
  position: fixed;
  z-index: 99;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  animation: fade-in 1s ease-out;
}

.m-help-box .box {
  width: 600rpx;
  background-color: #fff;
  border-radius: 25rpx;
  box-shadow: 0 0 50px #ced4da;
}

.m-help-box .box .header {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  border-bottom: 1px solid #e9ecef;
}

.m-help-box .box .header .title {
  font-size: 32rpx;
}

.m-help-box .box .body {
  display: block;
  width: 100%;
  color: #555;
  overflow: hidden;
  line-height: 180%;
  letter-spacing: 2rpx;
  text-align: justify;
  word-break: break-all;
}

.m-help-box .box .body .content {
  padding: 25rpx 36rpx 40rpx;
  font-size: 28rpx;
  text-indent: 2em;
}

.m-help-box .box .body .content .question {
  font-size: 30rpx;
  text-indent: 0;
  line-height: 200%;
  color: #868e96;
}

.m-help-box .box .body .content .answer {
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
}

.m-help-box .box .body .content .answer text {
  line-height: 160%;
  word-break: break-all;
  color: #495057;
}

.m-help-box .box .body .footer {
  padding: 0 36rpx 40rpx;
  font-size: 28rpx;
}

.m-help-box .box .body .clipboard {
  margin: 20rpx 30rpx;
  padding: 20rpx;
  font-size: 26rpx;
  border-radius: 10rpx;
  color: #fff;
  background-color: #777e85;
}

.m-help-box .icon-close {
  position: absolute;
  right: 25rpx;
  top: 15rpx;
  width: 50rpx;
  height: 50rpx;
  padding: 10rpx;
}

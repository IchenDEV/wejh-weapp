<template name="app-list">
  <view class="m-app-list">
    <view
      wx:for="{{apps}}"
      wx:key="index"
      catchtap="onClickApp"
      data-index="{{index}}"
      class="item{{item.disabled || !userInfo ? ' disabled' : ''}}{{item.ad ? ' ad' : ''}}"
    >
      <red-dot
        wx:if="{{item.badge}}"
        class="item-badge"
        enabled="{{userInfo}}"
        path="{{item.badge.path}}"
        displayMode="{{ {type: item.badge.type || 'simple', content: item.badge.content} }}"
        unclearedBadges="{{unclearedBadges}}"
      ></red-dot>
      <view class="item-image">
        <image
          src="{{item.icon}}"
          class="item-icon"
          mode="aspectFit"
          wx:if="{{item.icon}}"
        ></image>
        <text class="item-icon-text" wx:else>{{item.title[0]}}</text>
        <image
          src="/images/app-list/disabled.png"
          class="item-icon-bg"
          mode="aspectFit"
          wx:if="{{item.disabled || !userInfo ? 'disabled' : ''}}"
        ></image>
        <image
          src="{{item.bg}}"
          class="item-icon-bg"
          mode="aspectFit"
          wx:else
        ></image>
      </view>
      <text class="item-title">{{item.title}}</text>
    </view>
  </view>
</template>
